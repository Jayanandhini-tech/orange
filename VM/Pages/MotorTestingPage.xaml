<Page 
    x:Class="VM.Pages.MotorTestingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:VM.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="MotorTestingPage"
    d:DesignHeight="1000"
    d:DesignWidth="1080"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{md:MaterialDesignFont}"
    FontSize="18"
    Loaded="Page_Loaded"
    TextElement.FontSize="14"
    TextElement.FontWeight="Medium"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    Unloaded="Page_Unloaded"
    mc:Ignorable="d">

    <Page.Resources>
        
    </Page.Resources>

    <md:DialogHost Identifier="pgMotorTestingPageHost">
        <md:DialogHost.DialogContent>
            <StackPanel />
        </md:DialogHost.DialogContent>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="100" />
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0">
                <md:Card
                    Margin="20"
                    md:ElevationAssist.Elevation="Dp5"
                    md:UniformCornerRadius="10">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <md:Card
                                Width="450"
                                Height="350"
                                Margin="20"
                                md:ElevationAssist.Elevation="Dp16">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Button
                                        x:Name="btnRunMotor"
                                        Height="45"
                                        Margin="10"
                                        HorizontalAlignment="Center"
                                        Click="btnRunMotor_Click"
                                        Content="RUN MOTOR"
                                        FontSize="20" />

                                    <Button
                                        x:Name="btnModbusStatus"
                                        Height="45"
                                        Margin="10"
                                        HorizontalAlignment="Center"
                                        Click="btnStatus_Click"
                                        Content="Check Status"
                                        FontSize="20" />
                                    <Button
                                          x:Name="btnResetJuicer"
                                          Height="45"
                                          Margin="10"
                                          HorizontalAlignment="Center"
                                          Click="btnResetJuicer_Click"
                                          Content="Reset Juicer"
                                          FontSize="20" />
                                </StackPanel>
                            </md:Card>
                        </StackPanel>

                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="100" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                                <!-- Adjust row height -->
                            </Grid.RowDefinitions>

                            <DockPanel Grid.Row="1" Margin="0,0,16,0">
                                <TextBlock
                                    Name="lblStatus"
                                    Margin="10"
                                    FontSize="18"
                                    Text=""
                                    TextAlignment="Center" />
                            </DockPanel>

                            <!-- Using StackPanel instead of WrapPanel -->
                            <StackPanel
                                Grid.Row="2"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">

                                <Button
                                    x:Name="btnPauseAndPlay"
                                    Width="180"
                                    Height="45"
                                    Margin="16,0"
                                    HorizontalAlignment="Center"
                                    Click="btnPauseAndPlay_Click"
                                    Content="PAUSE"
                                    FontSize="20"
                                    Visibility="Visible"
                                    Panel.ZIndex="10" />

                                <Button
                                    x:Name="btnCancelAllMotorTest"
                                    Width="180"
                                    Height="45"
                                    Margin="16,0"
                                    HorizontalAlignment="Center"
                                    Click="btnCancelAllMotorTest_Click"
                                    Content="CANCEL TEST"
                                    FontSize="20"
                                    Visibility="Visible"
                                    Panel.ZIndex="10" />
                            </StackPanel>
                        </Grid>
                    </Grid>
                </md:Card>
            </DockPanel>

            <Border Grid.Row="2" CornerRadius="5,5,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="150" />
                    </Grid.ColumnDefinitions>
                    <Button
                        Name="btnBack"
                        Grid.Column="0"
                        Width="130"
                        Height="70"
                        VerticalAlignment="Center"
                        Click="btnBack_Click"
                        Content="Back"
                        FontSize="18"
                        Foreground="White" />
                </Grid>
            </Border>
        </Grid>
    </md:DialogHost>
</Page>
