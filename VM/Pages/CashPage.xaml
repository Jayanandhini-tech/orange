<Page
    x:Class="VM.Pages.CashPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:VM.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="CashPage"
    d:DesignHeight="1000"
    d:DesignWidth="800"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{md:MaterialDesignFont}"
    FontSize="18"
    Loaded="Page_Loaded"
    TextElement.FontSize="14"
    TextElement.FontWeight="Medium"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    Unloaded="Page_Unloaded"
    mc:Ignorable="d">


    <md:DialogHost Identifier="pgCashPageHost" Loaded="DialogHost_Loaded">
        <md:DialogHost.DialogContent>
            <StackPanel />
        </md:DialogHost.DialogContent>
        <Grid>
            <Grid.RowDefinitions>

                <RowDefinition Height="*" />
                <RowDefinition Height="100" />
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0">
                <md:Card
                    Width="600"
                    MaxHeight="900"
                    Margin="20"
                    md:ElevationAssist.Elevation="Dp24"
                    md:UniformCornerRadius="10"
                    Background="White"
                    TextElement.Foreground="Black">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="100" />
                            <RowDefinition Height="80" />
                            <RowDefinition Height="40" />
                            <RowDefinition Height="40" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="100" />

                        </Grid.RowDefinitions>

                        <TextBlock
                            Grid.Row="0"
                            VerticalAlignment="Center"
                            FontSize="40"
                            Text="CASH"
                            TextAlignment="Center" />

                        <TextBlock
                            Name="lblPrice"
                            Grid.Row="1"
                            VerticalAlignment="Center"
                            FontSize="28"
                            Text="Order Total : ₹200"
                            TextAlignment="Center" />

                        <StackPanel Grid.Row="2" TextElement.FontWeight="Normal">
                            <TextBlock Text="Insert Notes" TextAlignment="Center" />
                            <TextBlock Text="₹10, ₹20, ₹50, ₹100, ₹200" TextAlignment="Center" />
                        </StackPanel>

                        <TextBlock
                            Name="lblMessage"
                            Grid.Row="3"
                            VerticalAlignment="Center"
                            TextAlignment="Center"
                            TextWrapping="Wrap" />

                        <StackPanel
                            Grid.Row="4"
                            Margin="0,50,0,0"
                            TextElement.FontSize="20">
                            <StackPanel
                                Name="sp200"
                                Margin="0,20,0,0"
                                HorizontalAlignment="Center"
                                Orientation="Horizontal">
                                <TextBlock Width="50" Text="200" />
                                <TextBlock Width="10" Text="x" />
                                <TextBlock
                                    Name="txt200Count"
                                    Width="50"
                                    Text="1"
                                    TextAlignment="Center" />
                                <TextBlock Width="10" Text="=" />
                                <TextBlock
                                    Name="txt200Value"
                                    Width="50"
                                    Text="200"
                                    TextAlignment="Right" />
                            </StackPanel>

                            <StackPanel
                                Name="sp100"
                                Margin="0,20,0,0"
                                HorizontalAlignment="Center"
                                Orientation="Horizontal">
                                <TextBlock Width="50" Text="100" />
                                <TextBlock Width="10" Text="x" />
                                <TextBlock
                                    Name="txt100Count"
                                    Width="50"
                                    Text="1"
                                    TextAlignment="Center" />
                                <TextBlock Width="10" Text="=" />
                                <TextBlock
                                    Name="txt100Value"
                                    Width="50"
                                    Text="100"
                                    TextAlignment="Right" />
                            </StackPanel>

                            <StackPanel
                                Name="sp50"
                                Margin="0,20,0,0"
                                HorizontalAlignment="Center"
                                Orientation="Horizontal">
                                <TextBlock Width="50" Text="50" />
                                <TextBlock Width="10" Text="x" />
                                <TextBlock
                                    Name="txt50Count"
                                    Width="50"
                                    Text="1"
                                    TextAlignment="Center" />
                                <TextBlock Width="10" Text="=" />
                                <TextBlock
                                    Name="txt50Value"
                                    Width="50"
                                    Text="50"
                                    TextAlignment="Right" />
                            </StackPanel>

                            <StackPanel
                                Name="sp20"
                                Margin="0,20,0,0"
                                HorizontalAlignment="Center"
                                Orientation="Horizontal">
                                <TextBlock Width="50" Text="20" />
                                <TextBlock Width="10" Text="x" />
                                <TextBlock
                                    Name="txt20Count"
                                    Width="50"
                                    Text="1"
                                    TextAlignment="Center" />
                                <TextBlock Width="10" Text="=" />
                                <TextBlock
                                    Name="txt20Value"
                                    Width="50"
                                    Text="20"
                                    TextAlignment="Right" />
                            </StackPanel>

                            <StackPanel
                                Name="sp10"
                                Margin="0,20,0,0"
                                HorizontalAlignment="Center"
                                Orientation="Horizontal">
                                <TextBlock Width="50" Text="10" />
                                <TextBlock Width="10" Text="x" />
                                <TextBlock
                                    Name="txt10Count"
                                    Width="50"
                                    Text="1"
                                    TextAlignment="Center" />
                                <TextBlock Width="10" Text="=" />
                                <TextBlock
                                    Name="txt10Value"
                                    Width="50"
                                    Text="10"
                                    TextAlignment="Right" />
                            </StackPanel>


                            <StackPanel Name="spTotal" Margin="0,20,0,0">
                                <Border
                                    Width="180"
                                    BorderBrush="Black"
                                    BorderThickness="1" />

                                <StackPanel
                                    Margin="0,10"
                                    HorizontalAlignment="Center"
                                    Orientation="Horizontal">
                                    <TextBlock Width="110" Text="Total" />
                                    <TextBlock Width="10" Text="=" />
                                    <TextBlock
                                        Name="txtTotal"
                                        Width="50"
                                        Text="380"
                                        TextAlignment="Right" />
                                </StackPanel>
                                <Border
                                    Width="180"
                                    BorderBrush="Black"
                                    BorderThickness="1" />
                            </StackPanel>

                        </StackPanel>

                        <StackPanel Grid.Row="5" VerticalAlignment="Center">
                            <TextBlock
                                Name="lblSecondsleft"
                                FontSize="35"
                                Foreground="#ca1f2f"
                                Text="180 Seconds"
                                TextAlignment="Center" />
                            <TextBlock
                                Name="lblSecondsleft2"
                                Margin="0,5,0,0"
                                FontSize="14"
                                Foreground="#ca1f2f"
                                Text="Remaining to complete the Payment"
                                TextAlignment="Center" />
                        </StackPanel>



                    </Grid>



                </md:Card>
            </DockPanel>




            <Border Grid.Row="2" CornerRadius="5,5,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="150" />
                    </Grid.ColumnDefinitions>
                    <Button
                        Name="btnBack"
                        Grid.Column="0"
                        Width="130"
                        Height="70"
                        VerticalAlignment="Center"
                        Background="#CA1F2F"
                        BorderBrush="#CA1F2F"
                        Click="btnBack_Click"
                        Content="Back"
                        FontSize="18"
                        Foreground="White" />

                </Grid>
            </Border>

        </Grid>



    </md:DialogHost>
</Page>
