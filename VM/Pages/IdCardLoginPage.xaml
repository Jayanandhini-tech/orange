<Page
    x:Class="VM.Pages.IdCardLoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:VM.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="IdCardLoginPage"
    d:DesignHeight="1000"
    d:DesignWidth="800"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{md:MaterialDesignFont}"
    FontSize="18"
    Loaded="Page_Loaded"
    PreviewKeyDown="Page_PreviewKeyDown"
    TextElement.FontSize="14"
    TextElement.FontWeight="Medium"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    mc:Ignorable="d">
    <Page.Resources>
        <Style x:Key="fadeinout" TargetType="TextBlock">
            <Style.Triggers>
                <EventTrigger RoutedEvent="TextBlock.Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimationUsingKeyFrames
                                AutoReverse="True"
                                RepeatBehavior="Forever"
                                Storyboard.TargetProperty="Opacity">
                                <EasingDoubleKeyFrame KeyTime="0" Value="1" />
                                <EasingDoubleKeyFrame KeyTime="0:0:1" Value="0" />
                            </DoubleAnimationUsingKeyFrames>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>


    <md:DialogHost Identifier="pgIdCardLoginHost">
        <md:DialogHost.DialogContent>
            <StackPanel />
        </md:DialogHost.DialogContent>
        <Grid>
            <Grid.RowDefinitions>

                <RowDefinition Height="*" />
                <RowDefinition Height="100" />
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0">
                <md:Card
                    Margin="20"
                    md:ElevationAssist.Elevation="Dp5"
                    md:UniformCornerRadius="10">
                    <StackPanel>
                        <TextBlock
                            Margin="20"
                            FontSize="25"
                            Style="{StaticResource fadeinout}"
                            Text="Show your card"
                            TextAlignment="Center" />

                        <TextBox x:Name="txtIdCardNumber" Width="0" />
                        <TextBlock x:Name="lblMessage" TextAlignment="Center" />
                        <Border
                            Width="600"
                            Height="600"
                            HorizontalAlignment="Center"
                            CornerRadius="20">
                            <Border.Background>
                                <ImageBrush ImageSource="/Images/IdCardTap.jpg" />
                            </Border.Background>
                        </Border>

                    </StackPanel>
                </md:Card>
            </DockPanel>

            <Border Grid.Row="2" CornerRadius="5,5,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="150" />
                    </Grid.ColumnDefinitions>
                    <Button
                        Name="btnBack"
                        Grid.Column="0"
                        Width="130"
                        Height="70"
                        VerticalAlignment="Center"
                        Click="btnBack_Click"
                        Content="Back"
                        FontSize="18"
                        Foreground="White" />

                    <Button
                        Name="btnRegister"
                        Grid.Column="2"
                        Grid.ColumnSpan="2"
                        Width="180"
                        Height="70"
                        Margin="0,0,20,0"
                        HorizontalAlignment="Right"
                        Click="btnRegister_Click"
                        Content="Register Card"
                        FontSize="18"
                        IsDefault="False" />


                </Grid>
            </Border>

        </Grid>



    </md:DialogHost>
</Page>
