<Page
    x:Class="VM.Pages.OperatorHomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:VM.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="OperatorHomePage"
    d:DesignHeight="1000"
    d:DesignWidth="1080"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{md:MaterialDesignFont}"
    FontSize="18"
    Loaded="Page_Loaded"
    TextElement.FontSize="14"
    TextElement.FontWeight="Medium"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    mc:Ignorable="d">


    <md:DialogHost Identifier="pgOperatorHomePageHost">
        <md:DialogHost.DialogContent>
            <StackPanel />
        </md:DialogHost.DialogContent>
        <Grid>
            <Grid.RowDefinitions>

                <RowDefinition Height="*" />
                <RowDefinition Height="100" />
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0">
                <md:Card
                    Background="LightYellow"
                    Margin="20"
                    md:ElevationAssist.Elevation="Dp5"
                    md:UniformCornerRadius="10">
                    <StackPanel VerticalAlignment="Center">
                        <WrapPanel HorizontalAlignment="Center">
                            <Button
                                Name="btnRefill"
                                Width="200"
                                Height="250"
                                Margin="20"
                                md:ButtonAssist.CornerRadius="10"
                                Background="Black"
                                BorderThickness="0"
                                Click="btnRefill_Click"
                                FontSize="20"
                                Tag="1"
                                 TextElement.Foreground="GreenYellow">
                                <StackPanel>
                                    <md:PackIcon
                                        Width="150"
                                        Height="150"
                                        Kind="TableColumn" />

                                    <TextBlock
                                        Margin="0,10"
                                        FontSize="25"
                                        Text="Refill"
                                        TextAlignment="Center" />
                                </StackPanel>
                            </Button>

                            <Button
                                Name="btnRefill2"
                                Width="200"
                                Height="250"
                                Margin="20"
                                md:ButtonAssist.CornerRadius="10"
                                Background="Black"
                                BorderThickness="0"
                                Click="btnRefill_Click"
                                FontSize="20"
                                Tag="2"
                                Visibility="Collapsed"
                                 TextElement.Foreground="GreenYellow">
                                <StackPanel>
                                    <md:PackIcon
                                        Width="150"
                                        Height="150"
                                        Kind="TableColumn" />

                                    <TextBlock
                                        Margin="0,10"
                                        FontSize="25"
                                        Text="Refill 2"
                                        TextAlignment="Center" />
                                </StackPanel>
                            </Button>


                            <Button
                                Name="btnSprialSettings"
                                Width="200"
                                Height="250"
                                Margin="20"
                                md:ButtonAssist.CornerRadius="10"
                                Background="Black"
                                BorderThickness="0"
                                Click="btnSprialSettings_Click"
                                FontSize="20"
                                Tag="1"
                                Visibility="Collapsed"
                                TextElement.Foreground="GreenYellow">
                                <StackPanel>
                                    <Image
                                        Width="150"
                                        Height="150"
                                        Source="/Images/Sprial.png"
                                        Stretch="Fill" 
                                        Visibility="Collapsed"/>

                                    <TextBlock
                                        Margin="0,10"
                                        FontSize="25"
                                        Text="Sprial Settings"
                                        TextAlignment="Center"
                                        Visibility="Collapsed"/>
                                </StackPanel>
                            </Button>

                            <Button
                                Name="btnSprialSettings2"
                                Width="200"
                                Height="250"
                                Margin="20"
                                md:ButtonAssist.CornerRadius="10"
                                Background="Black"
                                BorderThickness="0"
                                Click="btnSprialSettings_Click"
                                FontSize="20"
                                Tag="2"
                                Visibility="Collapsed"
                                TextElement.Foreground="GreenYellow">
                                <StackPanel>
                                    <Image
                                        Width="150"
                                        Height="150"
                                        Source="/Images/Sprial.png"
                                        Stretch="Fill" 
                                        Visibility="Collapsed"/>

                                    <TextBlock
                                        Margin="0,10"
                                        FontSize="25"
                                        Text="Sprial Settings 2"
                                        TextAlignment="Center"
                                        TextWrapping="Wrap"
                                        Visibility="Collapsed"/>
                                </StackPanel>
                            </Button>

                            <Button
                                Name="btnReport"
                                Width="200"
                                Height="250"
                                Margin="20"
                                md:ButtonAssist.CornerRadius="10"
                                Background="Black"
                                BorderThickness="0"
                                Click="btnReport_Click"
                                FontSize="20"
                               TextElement.Foreground="GreenYellow">
                                <StackPanel>
                                    <md:PackIcon
                                        Width="150"
                                        Height="150"
                                        Kind="FileChartOutline" />

                                    <TextBlock
                                        Margin="0,10"
                                        FontSize="25"
                                        Text="Reports"
                                        TextAlignment="Center" />
                                </StackPanel>
                            </Button>


                            <Button
                                Name="btnMotorTesting"
                                Width="200"
                                Height="250"
                                Margin="20"
                                md:ButtonAssist.CornerRadius="10"
                                Background="Black"
                                BorderThickness="0"
                                Click="btnMotorTesting_Click"
                                FontSize="20"
                                 TextElement.Foreground="GreenYellow">
                                <StackPanel>
                                    <md:PackIcon
                                        Width="150"
                                        Height="150"
                                        Kind="Search" />

                                    <TextBlock
                                        Margin="0,10"
                                        FontSize="25"
                                        Text="Motor Testing"
                                        TextAlignment="Center" />
                                </StackPanel>
                            </Button>

                        </WrapPanel>

                        <WrapPanel HorizontalAlignment="Center">
                            <Button
                                Name="btnShutdown"
                                Width="200"
                                Height="250"
                                Margin="20"
                                md:ButtonAssist.CornerRadius="10"
                                Background="Black"
                                BorderThickness="0"
                                Click="btnShutdown_Click"
                                FontSize="20"
                                TextElement.Foreground="GreenYellow">
                                <StackPanel>
                                    <md:PackIcon
                                        Width="150"
                                        Height="150"
                                        Kind="Power" />

                                    <TextBlock
                                        Margin="0,10"
                                        FontSize="25"
                                        Text="Shutdown"
                                        TextAlignment="Center" />
                                </StackPanel>
                            </Button>

                            <Button
                                Name="btnRestart"
                                Width="200"
                                Height="250"
                                Margin="20"
                                md:ButtonAssist.CornerRadius="10"
                                Background="Black"
                                BorderThickness="0"
                                Click="btnRestart_Click"
                                FontSize="20"
                                  TextElement.Foreground="GreenYellow">
                                <StackPanel>
                                    <md:PackIcon
                                        Width="150"
                                        Height="150"
                                        Kind="Restart" />

                                    <TextBlock
                                        Margin="0,10"
                                        FontSize="25"
                                        Text="Restart"
                                        TextAlignment="Center" />
                                </StackPanel>
                            </Button>

                            <Button
                                Name="btnExit"
                                Width="200"
                                Height="250"
                                Margin="20"
                                md:ButtonAssist.CornerRadius="10"
                                Background="Black"
                                BorderThickness="0"
                                Click="btnExit_Click"
                                FontSize="20"
                                TextElement.Foreground="GreenYellow">
                                <StackPanel>
                                    <md:PackIcon
                                        Width="150"
                                        Height="150"
                                        Kind="WindowClose" />

                                    <TextBlock
                                        Margin="0,10"
                                        FontSize="25"
                                        Text="Exit"
                                        TextAlignment="Center" />
                                </StackPanel>
                            </Button>

                        </WrapPanel>
                    </StackPanel>
                </md:Card>
            </DockPanel>

            <Border Grid.Row="2" CornerRadius="5,5,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="150" />
                    </Grid.ColumnDefinitions>
                    <Button
                        Name="btnBack"
                        Grid.Column="0"
                        Width="130"
                        Height="70"
                        VerticalAlignment="Center"
                        Background="#CA1F2F"
                        BorderBrush="#CA1F2F"
                        Click="btnBack_Click"
                        Content="Back"
                        FontSize="18"
                        Foreground="White" />

                </Grid>
            </Border>

        </Grid>



    </md:DialogHost>
</Page>
