<UserControl
    x:Class="VM.Components.ProductDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:VM.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    MinWidth="600"
    MinHeight="700"
    VerticalAlignment="Stretch"
    d:DesignHeight="700"
    d:DesignWidth="600"
    Loaded="UserControl_Loaded"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
            <RowDefinition Height="200" />
            <RowDefinition Height="150" />
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0">
            <TextBlock
                VerticalAlignment="Center"
                FontSize="30"
                Text="Select the Item"
                TextAlignment="Center" />

        </DockPanel>

        <DockPanel Grid.Row="1">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <WrapPanel
                    Grid.Column="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                    <TextBlock FontSize="15" Text="Search Product : " />
                    <TextBox
                        x:Name="txtFilter"
                        Width="200"
                        BorderBrush="Gray"
                        FontSize="15"
                        TextChanged="txtSearch_TextChanged" />
                </WrapPanel>
                <Button
                    Name="btnRefreshProduct"
                    Grid.Column="1"
                    Margin="20,0"
                    Click="btnRefreshProduct_Click"
                    Content="Refresh Products" />
            </Grid>


        </DockPanel>

        <DockPanel Grid.Row="2">
            <ListView
                Name="lvProduct"
                Margin="10"
                SelectionChanged="dgvProduct_SelectionChanged">
                <ListView.View>
                    <GridView>
                        <GridViewColumn
                            Width="100"
                            DisplayMemberBinding="{Binding Sno}"
                            Header="SNO" />
                        <GridViewColumn
                            Width="420"
                            DisplayMemberBinding="{Binding Name}"
                            Header="ITEM NAME" />
                        <GridViewColumn Width="100">
                            <GridViewColumn.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="PRICE" TextAlignment="Center" />
                                </DataTemplate>
                            </GridViewColumn.HeaderTemplate>
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock
                                        Width="100"
                                        Text="{Binding Price}"
                                        TextAlignment="Center" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </DockPanel>

        <DockPanel Grid.Row="3">
            <StackPanel
                Margin="0,5"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <Button
                        Width="40"
                        Height="40"
                        Click="btnNumber_Click"
                        Style="{StaticResource btn-keyboard}"
                        Tag="1" />
                    <Button
                        Width="40"
                        Height="40"
                        Click="btnNumber_Click"
                        Style="{StaticResource btn-keyboard}"
                        Tag="2" />
                    <Button
                        Width="40"
                        Height="40"
                        Click="btnNumber_Click"
                        Style="{StaticResource btn-keyboard}"
                        Tag="3" />
                    <Button
                        Width="40"
                        Height="40"
                        Click="btnNumber_Click"
                        Style="{StaticResource btn-keyboard}"
                        Tag="4" />
                    <Button
                        Width="40"
                        Height="40"
                        Click="btnNumber_Click"
                        Style="{StaticResource btn-keyboard}"
                        Tag="5" />
                    <Button
                        Width="40"
                        Height="40"
                        Click="btnNumber_Click"
                        Style="{StaticResource btn-keyboard}"
                        Tag="6" />
                    <Button
                        Width="40"
                        Height="40"
                        Click="btnNumber_Click"
                        Style="{StaticResource btn-keyboard}"
                        Tag="7" />
                    <Button
                        Width="40"
                        Height="40"
                        Click="btnNumber_Click"
                        Style="{StaticResource btn-keyboard}"
                        Tag="8" />
                    <Button
                        Width="40"
                        Height="40"
                        Click="btnNumber_Click"
                        Style="{StaticResource btn-keyboard}"
                        Tag="9" />
                    <Button
                        Width="40"
                        Height="40"
                        Click="btnNumber_Click"
                        Style="{StaticResource btn-keyboard}"
                        Tag="0" />
                </StackPanel>


                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <Button
                        Width="40"
                        Height="40"
                        Click="btnNumber_Click"
                        Style="{StaticResource btn-keyboard}"
                        Tag="Q" />
                    <Button
                        Width="40"
                        Height="40"
                        Click="btnNumber_Click"
                        Style="{StaticResource btn-keyboard}"
                        Tag="W" />
                    <Button
                        Width="40"
                        Height="40"
                        Click="btnNumber_Click"
                        Style="{StaticResource btn-keyboard}"
                        Tag="E" />
                    <Button
                        Width="40"
                        Height="40"
                        Click="btnNumber_Click"
                        Style="{StaticResource btn-keyboard}"
                        Tag="R" />
                    <Button
                        Width="40"
                        Height="40"
                        Click="btnNumber_Click"
                        Style="{StaticResource btn-keyboard}"
                        Tag="T" />
                    <Button
                        Width="40"
                        Height="40"
                        Click="btnNumber_Click"
                        Style="{StaticResource btn-keyboard}"
                        Tag="Y" />
                    <Button
                        Width="40"
                        Height="40"
                        Click="btnNumber_Click"
                        Style="{StaticResource btn-keyboard}"
                        Tag="U" />
                    <Button
                        Width="40"
                        Height="40"
                        Click="btnNumber_Click"
                        Style="{StaticResource btn-keyboard}"
                        Tag="I" />
                    <Button
                        Width="40"
                        Height="40"
                        Click="btnNumber_Click"
                        Style="{StaticResource btn-keyboard}"
                        Tag="O" />
                    <Button
                        Width="40"
                        Height="40"
                        Click="btnNumber_Click"
                        Style="{StaticResource btn-keyboard}"
                        Tag="P" />
                </StackPanel>


                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <Button
                        Width="40"
                        Height="40"
                        Click="btnNumber_Click"
                        Style="{StaticResource btn-keyboard}"
                        Tag="A" />
                    <Button
                        Width="40"
                        Height="40"
                        Click="btnNumber_Click"
                        Style="{StaticResource btn-keyboard}"
                        Tag="S" />
                    <Button
                        Width="40"
                        Height="40"
                        Click="btnNumber_Click"
                        Style="{StaticResource btn-keyboard}"
                        Tag="D" />
                    <Button
                        Width="40"
                        Height="40"
                        Click="btnNumber_Click"
                        Style="{StaticResource btn-keyboard}"
                        Tag="F" />
                    <Button
                        Width="40"
                        Height="40"
                        Click="btnNumber_Click"
                        Style="{StaticResource btn-keyboard}"
                        Tag="G" />
                    <Button
                        Width="40"
                        Height="40"
                        Click="btnNumber_Click"
                        Style="{StaticResource btn-keyboard}"
                        Tag="H" />
                    <Button
                        Width="40"
                        Height="40"
                        Click="btnNumber_Click"
                        Style="{StaticResource btn-keyboard}"
                        Tag="J" />
                    <Button
                        Width="40"
                        Height="40"
                        Click="btnNumber_Click"
                        Style="{StaticResource btn-keyboard}"
                        Tag="K" />
                    <Button
                        Width="40"
                        Height="40"
                        Click="btnNumber_Click"
                        Style="{StaticResource btn-keyboard}"
                        Tag="L" />
                </StackPanel>

                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <Button
                        Width="80"
                        Height="50"
                        Click="btnNumber_Click"
                        FontSize="20"
                        Style="{StaticResource btn-keyboard}"
                        Tag=" ">
                        SPACE
                    </Button>
                    <Button
                        Width="40"
                        Height="40"
                        Click="btnNumber_Click"
                        Style="{StaticResource btn-keyboard}"
                        Tag="Z" />
                    <Button
                        Width="40"
                        Height="40"
                        Click="btnNumber_Click"
                        Style="{StaticResource btn-keyboard}"
                        Tag="X" />
                    <Button
                        Width="40"
                        Height="40"
                        Click="btnNumber_Click"
                        Style="{StaticResource btn-keyboard}"
                        Tag="C" />
                    <Button
                        Width="40"
                        Height="40"
                        Click="btnNumber_Click"
                        Style="{StaticResource btn-keyboard}"
                        Tag="V" />
                    <Button
                        Width="40"
                        Height="40"
                        Click="btnNumber_Click"
                        Style="{StaticResource btn-keyboard}"
                        Tag="B" />
                    <Button
                        Width="40"
                        Height="40"
                        Click="btnNumber_Click"
                        Style="{StaticResource btn-keyboard}"
                        Tag="N" />
                    <Button
                        Width="40"
                        Height="40"
                        Click="btnNumber_Click"
                        Style="{StaticResource btn-keyboard}"
                        Tag="M" />
                    <Button
                        Width="40"
                        Height="40"
                        Click="btnNumber_Click"
                        Style="{StaticResource btn-keyboard}"
                        Tag="." />
                    <Button
                        Width="90"
                        Height="50"
                        Background="#CA1F2F"
                        BorderBrush="#CA1F2F"
                        Click="btnNumber_Click"
                        FontSize="20"
                        Style="{StaticResource btn-keyboard}"
                        Tag="DEL">
                        DELETE
                    </Button>
                </StackPanel>

            </StackPanel>

        </DockPanel>

        <DockPanel Grid.Row="4">
            <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button
                    Name="btnCancel"
                    Grid.Row="1"
                    Width="250"
                    Height="auto"
                    Margin="16,10"
                    Click="btnCancel_Click"
                    FontSize="20"
                    Style="{DynamicResource MaterialDesignFlatButton}">
                    CANCEL
                </Button>


                <Button
                    Name="btnOk"
                    Grid.Row="1"
                    Width="250"
                    Height="auto"
                    Margin="16,10"
                    Click="btnOk_Click"
                    FontSize="20"
                    IsDefault="True"
                    Style="{DynamicResource MaterialDesignFlatButton}">
                    CHANGE
                </Button>
            </WrapPanel>
        </DockPanel>

    </Grid>
</UserControl>
