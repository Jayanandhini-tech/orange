<Page
    x:Class="VM.Pages.CardPaymentPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:VM.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="CardPaymentPage"
    d:DesignHeight="1000"
    d:DesignWidth="800"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{md:MaterialDesignFont}"
    FontSize="18"
    Loaded="Page_Loaded"
    TextElement.FontSize="14"
    TextElement.FontWeight="Medium"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    Unloaded="Page_Unloaded"
    mc:Ignorable="d">


    <md:DialogHost Identifier="pgCardPaymentHost">
        <md:DialogHost.DialogContent>
            <StackPanel />
        </md:DialogHost.DialogContent>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="*" />
                <RowDefinition Height="100" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                      x:Name="txtPlaceCup"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Top"
                      FontSize="24"
                      FontWeight="Bold"
                      Text="Ensure empty cup is placed on tray and then scan to pay"
                      Visibility="Collapsed"
                      Margin="0,10,0,10"
                      Foreground="Gold" />

            <DockPanel Grid.Row="1">
                <md:Card
                    Width="600"
                    MaxHeight="900"
                    Margin="20"
                    md:ElevationAssist.Elevation="Dp24"
                    md:UniformCornerRadius="10"
                    Background="White"
                    TextElement.Foreground="Black">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="100" />
                            <RowDefinition Height="80" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="80" />
                            <RowDefinition Height="120" />
                            <RowDefinition Height="90" />
                        </Grid.RowDefinitions>

                        <TextBlock
                            Grid.Row="0"
                            VerticalAlignment="Center"
                            FontSize="48"
                            Text="Credit / Debit Card"
                            TextAlignment="Center" />

                        <TextBlock
                            Grid.Row="1"
                            FontSize="27"
                            Margin="0,30,0,0"
                            FontWeight="Bold"
                            Foreground="#ca1f2f"
                            Text="Dip / Insert your card once payment is initiated"
                            TextAlignment="Center" />

                        <Image
                            x:Name="img_Card"
                            Grid.Row="2"
                            Width="300"
                            Height="250"
                            VerticalAlignment="Bottom"
                            Source="/Images/cardpayment.png"
                            Stretch="Uniform" Margin="150,0,150,50" />

                        <StackPanel Grid.Row="3">
                            <TextBlock
                                x:Name="lblDisplayName"
                                Text="Bharath Vending Corporation"
                                TextAlignment="Center"
                                FontSize="24"
                                Foreground="Green"
                                TextWrapping="Wrap" />
                            <TextBlock
                                x:Name="lblPrice"
                                Margin="0,20,0,0"
                                FontSize="22"
                                FontWeight="Bold"
                                Text="₹ "
                                TextAlignment="Center" />
                        </StackPanel>


                        <StackPanel Grid.Row="4" VerticalAlignment="Center">
                            <TextBlock
                                Name="lblSecondsleft"
                                FontSize="35"
                                Foreground="#ca1f2f"
                                Text="180 Seconds"
                                TextAlignment="Center" />
                            <TextBlock
                                Name="lblSecondsleft2"
                                Margin="0,5,0,0"
                                FontSize="15"
                                Foreground="#ca1f2f"
                                Text="Remaining to complete the Payment"
                                TextAlignment="Center" />
                        </StackPanel>

                        <Image
    Grid.Row="5"
    Source="/Images/cardpayment2.png"
    Height="60"
    Stretch="Fill"
    Margin="0,0,0,5"
    />

                    </Grid>



                </md:Card>
            </DockPanel>


            <Border Grid.Row="2" CornerRadius="5,5,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="150" />
                    </Grid.ColumnDefinitions>
                    <Button
                        Name="btnBack"
                        Grid.Column="0"
                        Width="130"
                        Height="70"
                        VerticalAlignment="Center"
                        Background="#CA1F2F"
                        BorderBrush="#CA1F2F"
                        Click="btnBack_Click"
                        Content="Back"
                        FontSize="18"
                        Foreground="White" />

                </Grid>
            </Border>

        </Grid>



    </md:DialogHost>
</Page>
