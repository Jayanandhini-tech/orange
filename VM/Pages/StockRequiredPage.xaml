<Page
    x:Class="VM.Pages.StockRequiredPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:VM.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="StockRequiredPage"
    d:DesignHeight="1000"
    d:DesignWidth="1080"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{md:MaterialDesignFont}"
    FontSize="18"
    Loaded="Page_Loaded"
    TextElement.FontSize="14"
    TextElement.FontWeight="Medium"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    mc:Ignorable="d">


    <md:DialogHost Identifier="pgStockRequiredPageHost">
        <md:DialogHost.DialogContent>
            <StackPanel />
        </md:DialogHost.DialogContent>
        <Grid>
            <Grid.RowDefinitions>

                <RowDefinition Height="*" />
                <RowDefinition Height="100" />
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0">
                <md:Card
                    Margin="20,0"
                    md:ElevationAssist.Elevation="Dp5"
                    md:UniformCornerRadius="10">

                    <DataGrid
                        x:Name="dgStocks"
                        Width="900"
                        Margin="16"
                        HorizontalAlignment="Center"
                        AutoGenerateColumns="False"
                        FontSize="20"
                        IsHitTestVisible="False"
                        IsReadOnly="True"
                        RowHeight="40">
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="80"
                                Binding="{Binding Path=SNo}"
                                Header="Sno" />

                            <DataGridTextColumn
                                Width="480"
                                Binding="{Binding Path=Name}"
                                Header="Product">
                                <DataGridTextColumn.CellStyle>
                                    <Style TargetType="DataGridCell">
                                        <Setter Property="FontSize" Value="16" />
                                        <Setter Property="VerticalContentAlignment" Value="Center" />
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type DataGridCell}">
                                                    <Border>
                                                        <ContentPresenter VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </DataGridTextColumn.CellStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn
                                Width="120"
                                Binding="{Binding Path=Capacity}"
                                Header="Capacity">
                                <DataGridTextColumn.CellStyle>
                                    <Style TargetType="DataGridCell">
                                        <Setter Property="HorizontalAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.CellStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn
                                Width="100"
                                Binding="{Binding Path=Stock}"
                                Header="Stock">
                                <DataGridTextColumn.CellStyle>
                                    <Style TargetType="DataGridCell">
                                        <Setter Property="HorizontalAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.CellStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn
                                Width="120"
                                Binding="{Binding Path=Required}"
                                Header="Required">
                                <DataGridTextColumn.CellStyle>
                                    <Style TargetType="DataGridCell">
                                        <Setter Property="Foreground" Value="Red" />
                                        <Setter Property="HorizontalAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.CellStyle>
                            </DataGridTextColumn>


                        </DataGrid.Columns>
                    </DataGrid>

                </md:Card>
            </DockPanel>

            <Border Grid.Row="2" CornerRadius="5,5,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="150" />
                    </Grid.ColumnDefinitions>
                    <Button
                        Name="btnBack"
                        Grid.Column="0"
                        Width="130"
                        Height="70"
                        VerticalAlignment="Center"
                        Click="btnBack_Click"
                        Content="Back"
                        FontSize="18"
                        Foreground="White" />

                    <StackPanel
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                        <WrapPanel>
                            <Button
                                Name="btnMovePrevious"
                                Width="50"
                                Height="50"
                                Padding="0"
                                Click="btnMovePrevious_Click">
                                <md:PackIcon
                                    Width="40"
                                    Height="40"
                                    Kind="ChevronLeft" />
                            </Button>
                            <TextBlock
                                Name="lblPage"
                                Width="100"
                                VerticalAlignment="Center"
                                FontSize="22"
                                TextAlignment="Center" />
                            <Button
                                Name="btnMoveNext"
                                Width="50"
                                Height="50"
                                Padding="0"
                                Click="btnMoveNext_Click">
                                <md:PackIcon
                                    Width="40"
                                    Height="40"
                                    Kind="ChevronRight" />
                            </Button>
                        </WrapPanel>

                    </StackPanel>

                </Grid>
            </Border>

        </Grid>



    </md:DialogHost>
</Page>
