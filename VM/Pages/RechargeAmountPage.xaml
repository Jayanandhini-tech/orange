<Page
    x:Class="VM.Pages.RechargeAmountPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:VM.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="RechargeAmountPage"
    d:DesignHeight="1000"
    d:DesignWidth="1040"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{md:MaterialDesignFont}"
    FontSize="18"
    Loaded="Page_Loaded"
    TextElement.FontSize="14"
    TextElement.FontWeight="Medium"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    mc:Ignorable="d">


    <md:DialogHost Identifier="pgRechargeAmountPageHost">
        <md:DialogHost.DialogContent>
            <StackPanel />
        </md:DialogHost.DialogContent>
        <Grid>
            <Grid.RowDefinitions>

                <RowDefinition Height="*" />
                <RowDefinition Height="100" />
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0">
                <md:Card
                    Margin="20"
                    md:ElevationAssist.Elevation="Dp5"
                    md:UniformCornerRadius="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <ScrollViewer
                            Name="svItems"
                            Grid.Row="0"
                            Margin="10"
                            Padding="5"
                            PanningMode="VerticalOnly"
                            VerticalScrollBarVisibility="Auto">
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock
                                    Margin="0,20,0,40"
                                    FontSize="30"
                                    FontWeight="Bold"
                                    Text="RECHARGE"
                                    TextAlignment="Center" />

                                <TextBox
                                    Name="txtAmount"
                                    Width="250"
                                    Margin="10"
                                    md:HintAssist.Hint="Amount"
                                    FontSize="20"
                                    MaxLength="4"
                                    PreviewMouseDown="TextBox_PreviewMouseDown"
                                    Style="{StaticResource MaterialDesignOutlinedTextBox}" />


                                <StackPanel Margin="0,50">
                                    <TextBlock Text="Recharge using" TextAlignment="Center" />
                                    <WrapPanel Margin="0,20" HorizontalAlignment="Center">

                                        <!--<Button
                                            Name="btnCash"
                                            Width="200"
                                            Height="50"
                                            Margin="25,0"
                                            md:ButtonAssist.CornerRadius="5"
                                            Background="#3BA600"
                                            BorderBrush="#3BA600"
                                            Click="btnCash_Click"
                                            Content="CASH"
                                            FontSize="18"
                                            Foreground="White" />-->

                                        <Button
                                            Name="btnUpi"
                                            Width="250"
                                            Height="50"
                                            Margin="25,0"
                                            md:ButtonAssist.CornerRadius="5"
                                            Background="#3BA600"
                                            BorderBrush="#3BA600"
                                            Click="btnUpi_Click"
                                            Content="Recharge"
                                            FontSize="18"
                                            Foreground="White" />
                                    </WrapPanel>

                                </StackPanel>


                            </StackPanel>
                        </ScrollViewer>

                        <DockPanel Grid.Row="1">

                            <StackPanel
                                Margin="0,5"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                    <Button
                                        Click="btnNumber_Click"
                                        Style="{StaticResource btn-keyboard}"
                                        Tag="1" />
                                    <Button
                                        Click="btnNumber_Click"
                                        Style="{StaticResource btn-keyboard}"
                                        Tag="2" />
                                    <Button
                                        Click="btnNumber_Click"
                                        Style="{StaticResource btn-keyboard}"
                                        Tag="3" />
                                </StackPanel>
                                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                    <Button
                                        Click="btnNumber_Click"
                                        Style="{StaticResource btn-keyboard}"
                                        Tag="4" />
                                    <Button
                                        Click="btnNumber_Click"
                                        Style="{StaticResource btn-keyboard}"
                                        Tag="5" />
                                    <Button
                                        Click="btnNumber_Click"
                                        Style="{StaticResource btn-keyboard}"
                                        Tag="6" />
                                </StackPanel>
                                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                    <Button
                                        Click="btnNumber_Click"
                                        Style="{StaticResource btn-keyboard}"
                                        Tag="7" />
                                    <Button
                                        Click="btnNumber_Click"
                                        Style="{StaticResource btn-keyboard}"
                                        Tag="8" />
                                    <Button
                                        Click="btnNumber_Click"
                                        Style="{StaticResource btn-keyboard}"
                                        Tag="9" />
                                </StackPanel>
                                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                    <Button
                                        Background="#CA1F2F"
                                        BorderBrush="#CA1F2F"
                                        Click="btnNumber_Click"
                                        FontSize="25"
                                        Style="{StaticResource btn-keyboard}"
                                        Tag="CE">
                                        CE
                                    </Button>
                                    <Button
                                        Click="btnNumber_Click"
                                        Style="{StaticResource btn-keyboard}"
                                        Tag="0" />

                                    <Button
                                        Background="#CA1F2F"
                                        BorderBrush="#CA1F2F"
                                        Click="btnNumber_Click"
                                        FontSize="25"
                                        Style="{StaticResource btn-keyboard}"
                                        Tag="DEL">
                                        DEL
                                    </Button>
                                </StackPanel>

                            </StackPanel>

                        </DockPanel>

                    </Grid>
                </md:Card>
            </DockPanel>

            <Border Grid.Row="2" CornerRadius="5,5,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="150" />
                    </Grid.ColumnDefinitions>
                    <Button
                        Name="btnBack"
                        Grid.Column="0"
                        Width="130"
                        Height="70"
                        VerticalAlignment="Center"
                        Click="btnBack_Click"
                        Content="Back"
                        FontSize="18"
                        Foreground="White" />


                </Grid>
            </Border>

        </Grid>



    </md:DialogHost>
</Page>
