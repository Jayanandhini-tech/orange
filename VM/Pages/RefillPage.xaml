<Page
    x:Class="VM.Pages.RefillPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:VM.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:uc="clr-namespace:VM.Components"
    Title="RefillPage"
    d:DesignHeight="1920"
    d:DesignWidth="1080"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{md:MaterialDesignFont}"
    FontSize="18"
    Loaded="Page_Loaded"
    TextElement.FontSize="14"
    TextElement.FontWeight="Medium"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    mc:Ignorable="d">


    <md:DialogHost Identifier="pgRefillPageHost">
        <md:DialogHost.DialogContent>
            <StackPanel />
        </md:DialogHost.DialogContent>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="100" />
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0">
                <md:Card
                    Margin="20,0"
                    md:ElevationAssist.Elevation="Dp5"
                    md:UniformCornerRadius="10">

                    <WrapPanel HorizontalAlignment="Left">

                        <DockPanel Width="600" MaxHeight="1200">
                            <ScrollViewer
                                PanningMode="VerticalOnly"
                                VerticalScrollBarVisibility="Auto"
                                VirtualizingPanel.IsVirtualizing="True">
                                <StackPanel>

                                    <ItemsControl Name="lstRow1">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <uc:ItemRefill
                                                    Margin="0,10"
                                                    Height="200"
                                                    Width="300"
                                                    Click="item_Click"
                                                    MotorNumber="{Binding MotorNumber}" />
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <UniformGrid Rows="1" />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                    </ItemsControl>



                                </StackPanel>
                            </ScrollViewer>
                        </DockPanel>
                        <!-- Your Card -->
                        <md:Card
    Width="320"
    Height="140"
    Margin="0,20,0,0"
    HorizontalAlignment="Center"
    md:ElevationAssist.Elevation="Dp8"
    md:UniformCornerRadius="12"
    Background="{DynamicResource MaterialDesignBody}"
    TextElement.Foreground="{DynamicResource MaterialDesignPaper}">
                            <WrapPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">
                                <TextBlock Text="How many oranges would you like to crush?"
                   FontSize="16"
                   Margin="0,0,0,10"
                   TextAlignment="Center"
                   FontWeight="SemiBold"
                   Width="280"
                   TextWrapping="Wrap" />

                                <TextBox
            x:Name="modbusOrangeCount"
            Width="80"
            Height="50"
            FontSize="20"
            GotFocus="TextBox_GotFocus"
            PreviewTextInput="NumberOnly_PreviewTextInput"
            VerticalContentAlignment="Center"
            HorizontalContentAlignment="Center"
            Margin="5"
            MaxLength="1"
            Text=""
            TextChanged="modbusOrangeCount_TextChanged"
            Style="{StaticResource MaterialDesignFloatingHintTextBox}" />

                                <Button
            Content="Submit"
            Width="80"
            Height="40"
            Margin="5"
            Click="btnEnterOrangeCount_Click"
            FontSize="16"
            Style="{StaticResource MaterialDesignRaisedButton}" />
                            </WrapPanel>
                        </md:Card>


                        <DockPanel MinWidth="800">

                            <WrapPanel
                                Margin="0,50"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                                <md:Card
                                    Width="300"
                                    Height="320"
                                    Margin="20"
                                    HorizontalAlignment="Center"
                                    md:ElevationAssist.Elevation="Dp24"
                                    md:UniformCornerRadius="10"
                                    Background="{DynamicResource MaterialDesignBody}"
                                    TextElement.Foreground="{DynamicResource MaterialDesignPaper}">
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock
                                            x:Name="lblDisplayNo"
                                            FontSize="15"
                                            FontWeight="Bold"
                                            Text="Select Tray"
                                            TextAlignment="Center" />
                                        <TextBlock
                                            x:Name="lblProductName"
                                            Width="350"
                                            FontSize="15"
                                            Text=""
                                            TextAlignment="Center"
                                            TextWrapping="Wrap" />
                                        <Border
                                            Name="brImage"
                                            Width="100"
                                            Height="100"
                                            BorderBrush="{DynamicResource MaterialDesignPaper}"
                                            BorderThickness="1"
                                            CornerRadius="5">
                                            <Border.Background>
                                                <ImageBrush ImageSource="/Images/Products/default.jpg" />
                                            </Border.Background>
                                        </Border>

                                        <WrapPanel HorizontalAlignment="Center">
                                            <TextBlock Text="Existing : " />
                                            <TextBlock x:Name="lblCurrentStock" Text="{Binding CurrentStock}" />
                                        </WrapPanel>

                                        <WrapPanel Margin="0,10" HorizontalAlignment="Center">
                                            <TextBlock
                                                VerticalAlignment="Center"
                                                FontSize="15"
                                                Text="Total Stock: " />
                                            <TextBox
                                                x:Name="txtTotalStock"
                                                Width="40"
                                                Height="35"
                                                GotFocus="TextBox_GotFocus"
                                                VerticalContentAlignment="Center"
                                                BorderBrush="Black"
                                                BorderThickness="1"
                                                FontSize="15"
                                                MaxLength="3"
                                                Text=""
                                                TextAlignment="Center" TextChanged="txtTotalStock_TextChanged" />
                                            <Button
                                                x:Name="btnRefill"
                                                Width="80"
                                                Height="35"
                                                Click="btnRefill_Click"
                                                FontSize="15" Content="Refill"/>
                                        </WrapPanel>

                                        <WrapPanel Margin="0,10" HorizontalAlignment="Center">
                                            <Button
                                                x:Name="btnChangeItem"
                                                Height="35"
                                                Margin="10,0"
                                                Click="btnChangeItem_Click"
                                                FontSize="15">
                                                Change Item
                                            </Button>
                                            <Button
                                                x:Name="btnClearStock"
                                                Height="35"
                                                Margin="10,0"
                                                Click="btnClearStock_Click"
                                                FontSize="15">
                                                Clear Stock
                                            </Button>

                                        </WrapPanel>

                                        <Button
                                            x:Name="btnStockRequired"
                                            Height="35"
                                            Margin="20,0"
                                            Click="btnStockRequired_Click"
                                            FontSize="15">
                                            Stock Required
                                        </Button>
                                    </StackPanel>
                                </md:Card>


                                <DockPanel Grid.Column="1">
                                    <Grid Width="250" Height="270">
                                        <Grid.ColumnDefinitions>

                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="1*" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="1*" />
                                            <RowDefinition Height="1*" />
                                            <RowDefinition Height="1*" />
                                            <RowDefinition Height="1*" />
                                        </Grid.RowDefinitions>

                                        <Button
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            Width="50"
                                            Height="50"
                                            Margin="0"
                                            Click="btnNumber_Click"
                                            FontSize="20"
                        
                                            Tag="1">
                                            1
                                        </Button>

                                        <Button
                                            Grid.Row="0"
                                            Grid.Column="1"
                                          Width="50"
                                           Height="50"
                                            Margin="0"
                                            Click="btnNumber_Click"
                                            FontSize="20"
                                            Tag="2">
                                            2
                                        </Button>

                                        <Button
                                            Grid.Row="0"
                                            Grid.Column="2"
                                            Width="50"
                                            Height="50"
                                            Margin="0"
                                            Click="btnNumber_Click"
                                            FontSize="20"
                                            Tag="3">
                                            3
                                        </Button>

                                        <Button
                                            Grid.Row="1"
                                            Grid.Column="0"
                                            Width="50"
                                            Height="50"
                                            Margin="0"
                                            Click="btnNumber_Click"
                                            FontSize="20"
                                            Tag="4">
                                            4
                                        </Button>

                                        <Button
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            Width="50"
                                            Height="50"
                                            Margin="0"
                                            Click="btnNumber_Click"
                                            FontSize="20"
                                            Tag="5">
                                            5
                                        </Button>

                                        <Button
                                            Grid.Row="1"
                                            Grid.Column="2"
                                            Width="50"
                                            Height="50"
                                            Margin="0"
                                            Click="btnNumber_Click"
                                            FontSize="20"
                                            Tag="6">
                                            6
                                        </Button>

                                        <Button
                                            Grid.Row="2"
                                            Grid.Column="0"
                                            Width="50"
                                            Height="50"
                                            Margin="0"
                                            Click="btnNumber_Click"
                                            FontSize="20"
                                            Tag="7">
                                            7
                                        </Button>

                                        <Button
                                            Grid.Row="2"
                                            Grid.Column="1"
                                            Width="50"
                                            Height="50"
                                            Margin="0"
                                            Click="btnNumber_Click"
                                            FontSize="20"
                                            Tag="8">
                                            8
                                        </Button>

                                        <Button
                                            Grid.Row="2"
                                            Grid.Column="2"
                                            Width="50"
                                            Height="50"
                                            Margin="0"
                                            Click="btnNumber_Click"
                                            FontSize="20"
                                            Tag="9">
                                            9
                                        </Button>

                                        <Button
                                            Grid.Row="3"
                                            Grid.Column="1"
                                            Width="50"
                                            Height="50"
                                            Margin="0"
                                            Click="btnNumber_Click"
                                            FontSize="20"
                                            Tag="0">
                                            0
                                        </Button>

                                        <Button
                                            Name="btnClear"
                                            Grid.Row="3"
                                            Grid.Column="0"
                                            Width="50"
                                            Height="50"
                                            Margin="0"
                                            Click="btnClear_Click"
                                            FontSize="20">
                                            X
                                        </Button>

                                        <Button
                                            Name="Backspace"
                                            Grid.Row="3"
                                            Grid.Column="2"
                                            Width="50"
                                            Height="50"
                                            Margin="0"
                                            Click="Backspace_Click">
                                            <md:PackIcon
                                                Width="30"
                                                Height="30"
                                                Kind="ChevronLeft" />
                                        </Button>

                                    </Grid>

                                </DockPanel>


                            </WrapPanel>
                        </DockPanel>

                    </WrapPanel>


                </md:Card>


            </DockPanel>


            <Border Grid.Row="2" CornerRadius="5,5,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="150" />
                    </Grid.ColumnDefinitions>
                    <Button
                        Name="btnBack"
                        Grid.Column="0"
                        Width="130"
                        Height="70"
                        VerticalAlignment="Center"
                        Background="#CA1F2F"
                        BorderBrush="#CA1F2F"
                        Click="btnBack_Click"
                        Content="Back"
                        FontSize="18"
                        Foreground="White" />

                </Grid>
            </Border>




        </Grid>





    </md:DialogHost>
</Page>