<Page
    x:Class="VM.Pages.VendingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:VM.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="VendingPage"
    d:DesignHeight="1000"
    d:DesignWidth="800"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{md:MaterialDesignFont}"
    FontSize="18"
    Loaded="Page_Loaded"
    TextElement.FontSize="14"
    TextElement.FontWeight="Medium"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    mc:Ignorable="d">

    <md:DialogHost Identifier="pgVendingPageHost">
        <md:DialogHost.DialogContent>
            <StackPanel />
        </md:DialogHost.DialogContent>

        <DockPanel>
            <md:Card
                Margin="20"
                md:ElevationAssist.Elevation="Dp5"
                md:UniformCornerRadius="10">

                <StackPanel>
                    <TextBlock
                        Name="lblMessage"
                        Margin="20"
                        FontSize="20"
                        Text=""
                        TextAlignment="Center"
                        TextWrapping="Wrap" />
                    <ItemsControl Name="lstItems" VirtualizingPanel.IsVirtualizing="True">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <md:Card
                                    Width="220"
                                    Margin="20"
                                    md:ElevationAssist.Elevation="Dp24"
                                    md:UniformCornerRadius="10"
                                    Background="White"
                                    Tag="{Binding Id}">
                                    <StackPanel TextElement.Foreground="{DynamicResource MaterialDesignPaper}">
                                        <Border
                                            Width="200"
                                            Height="200"
                                            Margin="0,10,0,0"
                                            BorderBrush="Transparent"
                                            BorderThickness="0"
                                            CornerRadius="10">

                                            <Border.Background>
                                                <ImageBrush ImageSource="{Binding ImgPath}" Stretch="Fill" />
                                            </Border.Background>
                                        </Border>

                                        <StackPanel
                                            Width="200"
                                            Margin="10"
                                            Orientation="Horizontal">
                                            <TextBlock
                                                Width="150"
                                                VerticalAlignment="Center"
                                                FontSize="15"
                                                Text="{Binding Name}"
                                                TextWrapping="Wrap" />

                                            <TextBlock
                                                Width="40"
                                                Margin="10,0,0,0"
                                                VerticalAlignment="Center"
                                                FontSize="16"
                                                Foreground="#CA1F2F"
                                                Text="{Binding Price, StringFormat=₹{0}}"
                                                TextAlignment="Right" />
                                        </StackPanel>


                                        <TextBlock
                                            Name="lblStatus"
                                            Margin="12,0,0,0"
                                            Text="{Binding Status}" />

                                        <WrapPanel>
                                            <ItemsControl ItemsSource="{Binding VendQtyStatus}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Button
                                                            Name="btn"
                                                            Width="35"
                                                            Height="35"
                                                            Margin="10"
                                                            md:ButtonProgressAssist.IndicatorBackground="Transparent"
                                                            md:ButtonProgressAssist.IndicatorForeground="#CA1F2F"
                                                            md:ButtonProgressAssist.IsIndeterminate="{Binding Processing}"
                                                            md:ButtonProgressAssist.IsIndicatorVisible="True"
                                                            md:ButtonProgressAssist.Value="{Binding ProcessValue}"
                                                            Background="Transparent"
                                                            BorderBrush="Gray"
                                                            Foreground="White"
                                                            Style="{StaticResource MaterialDesignFloatingActionButton}">
                                                            <md:PackIcon
                                                                Width="30"
                                                                Height="30"
                                                                Foreground="DimGray"
                                                                Kind="{Binding StatusIcon}" />
                                                        </Button>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <WrapPanel HorizontalAlignment="Center" />
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                            </ItemsControl>
                                        </WrapPanel>


                                    </StackPanel>

                                </md:Card>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel HorizontalAlignment="Center" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>

                </StackPanel>
            </md:Card>
        </DockPanel>




    </md:DialogHost>
</Page>
