<Page
    x:Class="VM.Pages.CartPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:VM.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="Cart"
    d:DesignHeight="1000"
    d:DesignWidth="800"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{md:MaterialDesignFont}"
    FontSize="18"
    Loaded="Page_Loaded"
    TextElement.FontSize="14"
    TextElement.FontWeight="Medium"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    mc:Ignorable="d">


    <md:DialogHost Identifier="pgCartHost">
        <md:DialogHost.DialogContent>
            <StackPanel />
        </md:DialogHost.DialogContent>
        <Grid>
            <Grid.RowDefinitions>
                
                <RowDefinition Height="*" />
                <RowDefinition Height="100" />
            </Grid.RowDefinitions>
         

            <DockPanel Grid.Row="0">
                <md:Card
                    Margin="20"
                    md:ElevationAssist.Elevation="Dp5"
                    md:UniformCornerRadius="10">

                    <ScrollViewer
                        Name="svItems"
                        Grid.Row="0"
                        Margin="10"
                        PanningMode="VerticalOnly"
                        VerticalScrollBarVisibility="Auto">

                        <StackPanel>
                            <TextBlock
                                x:Name="txtPlaceCup"
                                Text="Please fetch an empty cup and then proceed!"
                                FontSize="32"
                                FontWeight="Bold"
                                Foreground="Gold"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Margin="10"
                                Visibility="Collapsed" />
                            <ItemsControl Name="lstCart" HorizontalAlignment="Center">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border
                                        BorderBrush="LightGray"
                                        BorderThickness="0,0,0,1"
                                        Visibility="{Binding Path=IsSelected, Converter={StaticResource BooleanToVisibilityConverter}}">

                                            <Grid Margin="10,20">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="220" />
                                                    <ColumnDefinition Width="380" />
                                                    <ColumnDefinition Width="300" />
                                                </Grid.ColumnDefinitions>
                                                <Border
                                                Grid.Column="0"
                                                Width="200"
                                                Height="200"
                                                HorizontalAlignment="Left"
                                                BorderBrush="Transparent"
                                                BorderThickness="0"
                                                CornerRadius="10"
                                                Tag="{Binding Id}">
                                                    <Border.Background>
                                                        <ImageBrush ImageSource="{Binding ImgPath}" Stretch="Fill" />
                                                    </Border.Background>
                                                </Border>

                                                <StackPanel Grid.Column="1">
                                                    <TextBlock
                                                    Margin="0,20"
                                                    FontSize="20"
                                                    FontWeight="Bold"
                                                    Text="{Binding Name}" />
                                                    <TextBlock
                                                    FontSize="18"
                                                    FontWeight="Bold"
                                                    Text="{Binding Price, StringFormat=Price  {0:C}, ConverterCulture=en-IN}" />
                                                </StackPanel>

                                                <StackPanel Grid.Column="2">
                                                    <Grid
                                                    Width="120"
                                                    Margin="0,20"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Center">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>
                                                        <Button
                                                        Grid.Column="0"
                                                        Padding="0"
                                                        md:ButtonAssist.CornerRadius="5,0,0,5"
                                                        Background="#3BA600"
                                                        BorderBrush="#3BA600"
                                                        Click="BtnMinus_Click"
                                                        Content="{md:PackIcon Kind=Minus,
                                                                              Size=25}"
                                                        FontWeight="ExtraBold"
                                                        Style="{StaticResource MaterialDesignRaisedSecondaryButton}"
                                                        Tag="{Binding Id}" />

                                                        <Button
                                                        Grid.Column="1"
                                                        Padding="0"
                                                        md:ButtonAssist.CornerRadius="0"
                                                        Background="Transparent"
                                                        BorderBrush="#3BA600"
                                                        Content="{Binding qty}"
                                                        FontSize="18"
                                                        Style="{StaticResource MaterialDesignPaperSecondaryButton}" />

                                                        <Button
                                                        Grid.Column="2"
                                                        Padding="0"
                                                        md:ButtonAssist.CornerRadius="0,5,5,0"
                                                        Background="#3BA600"
                                                        BorderBrush="#3BA600"
                                                        Click="BtnPlus_Click"
                                                        Content="{md:PackIcon Kind=Plus,
                                                                              Size=25}"
                                                        Style="{StaticResource MaterialDesignRaisedSecondaryButton}"
                                                        Tag="{Binding Id}" />

                                                    </Grid>
                                                    <TextBlock
                                                    HorizontalAlignment="Right"
                                                    FontSize="18"
                                                    FontWeight="Bold"
                                                    Text="{Binding amount, StringFormat=C, ConverterCulture=en-IN}" />
                                                </StackPanel>

                                            </Grid>

                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>

                </md:Card>
            </DockPanel>

            <Border Grid.Row="2" CornerRadius="5,5,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="150" />
                    </Grid.ColumnDefinitions>
                    <Button
                        Name="btnBack"
                        Grid.Column="0"
                        Width="130"
                        Height="70"
                        VerticalAlignment="Center"
                        Background="#CA1F2F"
                        BorderBrush="#CA1F2F"
                        Click="btnBack_Click"
                        Content="Back"
                        FontSize="18"
                        Foreground="White" />

                    <TextBlock
                        x:Name="lblTotal"
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        VerticalAlignment="Center"
                        FontSize="25"
                        Text="Total : ₹0"
                        TextAlignment="Center" />


                    <Button
                        Name="btnNext"
                        Grid.Column="3"
                        Width="130"
                        Height="70"
                        VerticalAlignment="Center"
                        Background="#3BA600"
                        BorderBrush="#3BA600"
                        Click="btnNext_Click"
                        Content="Check Out"
                        FontSize="18"
                        Foreground="White" />


                </Grid>
            </Border>

        </Grid>



    </md:DialogHost>
</Page>
