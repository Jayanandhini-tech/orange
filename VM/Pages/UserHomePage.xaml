<Page
    x:Class="VM.Pages.UserHomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:VM.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="UserHomePage"
    d:DesignHeight="1000"
    d:DesignWidth="1080"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{md:MaterialDesignFont}"
    FontSize="18"
    Loaded="Page_Loaded"
    TextElement.FontSize="14"
    TextElement.FontWeight="Medium"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    mc:Ignorable="d">



    <md:DialogHost Identifier="pgUserHomePageHost" Loaded="DialogHost_Loaded">
        <md:DialogHost.DialogContent>
            <StackPanel />
        </md:DialogHost.DialogContent>
        <Grid>
            <Grid.RowDefinitions>

                <RowDefinition Height="*" />
                <RowDefinition Height="100" />
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0">
                <md:Card
                    Margin="20"
                    md:ElevationAssist.Elevation="Dp5"
                    md:UniformCornerRadius="10">
                    <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center">

                        <StackPanel MinWidth="880" HorizontalAlignment="Center">
                            <Border
                                Name="brPhoto"
                                Width="300"
                                Height="300"
                                CornerRadius="150">
                                <Border.Background>
                                    <ImageBrush ImageSource="/Images/placeholder-man.png" Stretch="Fill" />
                                </Border.Background>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock
                                    Name="lblName"
                                    Width="300"
                                    Margin="20"
                                    FontSize="28"
                                    Text="Welcome !"
                                    TextAlignment="Center"
                                    TextWrapping="Wrap" />
                                <TextBlock
                                    Name="lblId"
                                    Margin="20"
                                    FontSize="25"
                                    Text="ABC123"
                                    TextAlignment="Center" />
                                <TextBlock
                                    Name="lblBalance"
                                    FontSize="25"
                                    Text="Balance : 0"
                                    TextAlignment="Center" />


                                <Button
                                    Name="btnRecharge"
                                    Width="200"
                                    Height="50"
                                    Margin="20,20,20,100"
                                    VerticalAlignment="Center"
                                    Click="btnRecharge_Click"
                                    Content="Recharge Account"
                                    FontSize="20"
                                    Foreground="White" />

                            </StackPanel>
                        </StackPanel>


                        <StackPanel MinWidth="880" HorizontalAlignment="Center">
                            <TextBlock Text="ACCOUNT SUMMARY" TextAlignment="Center" />
                            <DataGrid
                                Name="dgRecharge"
                                Margin="20"
                                AutoGenerateColumns="False"
                                FontSize="14"
                                IsHitTestVisible="False"
                                IsReadOnly="True">
                                <DataGrid.Columns>
                                    <DataGridTextColumn
                                        Width="150"
                                        Binding="{Binding RechargeId}"
                                        Header="TRANS.ID" />

                                    <DataGridTextColumn
                                        Width="170"
                                        Binding="{Binding RechargeDate, StringFormat={}{0:dd-MM-yy hh:mm tt}}"
                                        Header="DATE" />

                                    <DataGridTextColumn
                                        Width="100"
                                        Binding="{Binding Amount}"
                                        Header="AMOUNT">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Center" />
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>

                                    <DataGridTextColumn
                                        Width="250"
                                        Binding="{Binding Description}"
                                        Header="DESCRIPTION">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextWrapping" Value="Wrap" />
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>

                                </DataGrid.Columns>
                            </DataGrid>

                            <DataGrid
                                Name="dgTransactions"
                                Margin="20"
                                AutoGenerateColumns="False"
                                FontSize="14"
                                IsHitTestVisible="False"
                                IsReadOnly="True">
                                <DataGrid.Columns>
                                    <DataGridTextColumn
                                        Width="150"
                                        Binding="{Binding OrderNumber}"
                                        Header="ORDER" />

                                    <DataGridTextColumn
                                        Width="170"
                                        Binding="{Binding OrderDate, StringFormat={}{0:dd-MM-yy hh:mm tt}}"
                                        Header="DATE" />

                                    <DataGridTextColumn
                                        Width="100"
                                        Binding="{Binding Amount}"
                                        Header="AMOUNT">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Center" />
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>

                                    <DataGridTextColumn
                                        Width="250"
                                        Binding="{Binding Items}"
                                        Header="ITEMS">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextWrapping" Value="Wrap" />
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>

                                </DataGrid.Columns>
                            </DataGrid>

                        </StackPanel>







                    </WrapPanel>
                </md:Card>
            </DockPanel>

            <Border Grid.Row="2" CornerRadius="5,5,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="150" />
                    </Grid.ColumnDefinitions>
                    <Button
                        Name="btnBack"
                        Grid.Column="0"
                        Width="130"
                        Height="70"
                        VerticalAlignment="Center"
                        Click="btnBack_Click"
                        Content="Back"
                        FontSize="18"
                        Foreground="White" />


                    <TextBlock
                        x:Name="lblTotal"
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        VerticalAlignment="Center"
                        FontSize="25"
                        Text="Total : ₹0"
                        TextAlignment="Center" />

                    <Button
                        Name="btnNext"
                        Grid.Column="3"
                        Width="130"
                        Height="70"
                        VerticalAlignment="Center"
                        Background="#3BA600"
                        BorderBrush="#3BA600"
                        Click="btnNext_Click"
                        Content="Confirm"
                        FontSize="18"
                        Foreground="White" />

                </Grid>
            </Border>

        </Grid>



    </md:DialogHost>
</Page>
