<Page
    x:Class="VM.Pages.OrderPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:VM.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="Order"
    d:DesignHeight="1000"
    d:DesignWidth="800"
    FontFamily="{md:MaterialDesignFont}"
    FontSize="18"
    TextElement.FontSize="14"
    TextElement.FontWeight="Medium"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    Unloaded="Page_Unloaded"
    mc:Ignorable="d">
    <!--<Page.Background>
        <ImageBrush ImageSource="/Images/background.jpg" Stretch="Fill" />
    </Page.Background>-->
    <Page.Resources>
        <Style x:Key="btn-basic" TargetType="{x:Type Button}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <TextBlock Text="{Binding RelativeSource={RelativeSource Self}, Path=Content}" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <md:DialogHost
        DialogTheme="Inherit"
        Identifier="pgOrderHost"
        Loaded="DialogHost_Loaded">
        <md:DialogHost.DialogContent>
            <StackPanel />
        </md:DialogHost.DialogContent>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="100" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="160" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <ScrollViewer
                    Grid.Row="0"
                    Grid.Column="0"
                    PanningMode="VerticalOnly"
                    VerticalScrollBarVisibility="Auto">
                    <md:Card
                        md:ElevationAssist.Elevation="Dp24"
                        Background="Transparent"
                        BorderThickness="1"
                        SnapsToDevicePixels="True"
                        TextElement.Foreground="Red"
                        UniformCornerRadius="0">
                        <Border Background="White" CornerRadius="0,20,20,0">
                            <ItemsControl Name="lstCategory" Margin="0,16,0,0">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>

                                        <Grid
                                            Width="150"
                                            Margin="0,15"
                                            MouseDown="GrdCategory_MouseDown"
                                            Tag="{Binding index}">
                                            <Grid.Triggers>
                                                <EventTrigger RoutedEvent="MouseDown">
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Width)">
                                                                <EasingDoubleKeyFrame KeyTime="0:0:0.0" Value="150" />
                                                                <EasingDoubleKeyFrame KeyTime="0:0:0.1" Value="120" />
                                                                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="170" />
                                                                <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="150" />
                                                            </DoubleAnimationUsingKeyFrames>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </EventTrigger>
                                            </Grid.Triggers>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="120" />
                                                <RowDefinition Height="auto" />

                                            </Grid.RowDefinitions>



                                            <Button
                                                Grid.Row="1"
                                                Width="130"
                                                Height="30"
                                                VerticalAlignment="Center"
                                                Panel.ZIndex="9"
                                                md:ButtonAssist.CornerRadius="5,5,25,25"
                                                Background="#CA1F2F"
                                                BorderBrush="#CA1F2F"
                                                Click="btnCategory_Click"
                                                Content="{Binding CategoryName}"
                                                Foreground="White" />


                                            <Border
                                                Grid.Row="0"
                                                Width="120"
                                                Height="120"
                                                Margin="0,0,0,-10"
                                                Panel.ZIndex="8"
                                                BorderBrush="Transparent"
                                                BorderThickness="0"
                                                CornerRadius="60">
                                                <Border.Background>
                                                    <ImageBrush ImageSource="{Binding ImgPath}" Stretch="Fill" />
                                                </Border.Background>
                                            </Border>


                                        </Grid>

                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>
                        </Border>
                    </md:Card>
                </ScrollViewer>

                <ScrollViewer
                    Name="svItems"
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="0,10,0,5"
                    PanningMode="VerticalOnly"
                    VerticalScrollBarVisibility="Auto"
                    VirtualizingPanel.IsVirtualizing="True">

                    <ItemsControl Name="lstProducts" VirtualizingPanel.IsVirtualizing="True">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>

                                <StackPanel>
                                    <TextBlock
                                        Height="50"
                                        VerticalAlignment="Center"
                                        FontSize="30"
                                        FontWeight="Bold"
                                        Text="{Binding CategoryName}" />

                                    <ItemsControl
                                        Margin="0,0,0,50"
                                        ItemsSource="{Binding Products}"
                                        VirtualizingPanel.IsVirtualizing="True">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>

                                                <Border
                                                    Width="220"
                                                    Margin="20"
                                                    Background="White"
                                                    CornerRadius="8">
                                                    <StackPanel TextElement.Foreground="{DynamicResource MaterialDesignPaper}">
                                                        <Border
                                                            Width="200"
                                                            Height="200"
                                                            Margin="0,10,0,0"
                                                            BorderBrush="Gray"
                                                            BorderThickness="1"
                                                            CornerRadius="10"
                                                            MouseDown="ProductImage_MouseDown"
                                                            SnapsToDevicePixels="True"
                                                            Tag="{Binding Id}">

                                                            <Border.Background>
                                                                <ImageBrush ImageSource="{Binding ImgPath, Mode=OneWay}" Stretch="UniformToFill" />
                                                            </Border.Background>
                                                        </Border>

                                                        <TextBlock
                                                            Height="50"
                                                            Margin="10,20,10,10"
                                                            FontSize="16"
                                                            Text="{Binding Name}"
                                                            TextAlignment="Center"
                                                            TextWrapping="Wrap" />

                                                        <StackPanel
                                                            Height="30"
                                                            Margin="10,10,10,16"
                                                            Orientation="Horizontal">
                                                            <TextBlock
                                                                Width="80"
                                                                VerticalAlignment="Center"
                                                                FontSize="18"
                                                                FontWeight="Bold"
                                                                Text="{Binding Price, StringFormat='₹ {0}'}" />
                                                            <StackPanel
                                                                x:Name="spBtnPlaceHolder"
                                                                Width="120"
                                                                Height="30">
                                                                <Border
                                                                    Width="120"
                                                                    Height="30"
                                                                    Background="#CA1F2F"
                                                                    BorderBrush="#CA1F2F"
                                                                    CornerRadius="5"
                                                                    MouseDown="Add_MouseDown"
                                                                    Tag="{Binding Id}"
                                                                    Visibility="{Binding Path=IsEmpty, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                                    <TextBlock
                                                                        VerticalAlignment="Center"
                                                                        FontSize="14"
                                                                        FontWeight="SemiBold"
                                                                        Foreground="White"
                                                                        Text="Add"
                                                                        TextAlignment="Center" />
                                                                </Border>
                                                            </StackPanel>
                                                        </StackPanel>



                                                    </StackPanel>

                                                </Border>


                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                    </ItemsControl>
                                </StackPanel>



                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel HorizontalAlignment="Center" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>

                </ScrollViewer>

            </Grid>

            <Border Grid.Row="2" TextElement.Foreground="{DynamicResource MaterialDesignBody}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="150" />
                    </Grid.ColumnDefinitions>
                    <Button
                        Name="btnBack"
                        Grid.Column="0"
                        Width="130"
                        Height="70"
                        VerticalAlignment="Center"
                        Background="#CA1F2F"
                        BorderBrush="#CA1F2F"
                        Click="btnBack_Click"
                        Content="Back"
                        FontSize="18"
                        Foreground="White" />

                    <TextBlock
                        x:Name="lblTotal"
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        VerticalAlignment="Center"
                        FontSize="25"
                        Text="Total : ₹0"
                        TextAlignment="Center" />

                    <Button
                        Name="btnNext"
                        Grid.Column="3"
                        Width="130"
                        Height="70"
                        VerticalAlignment="Center"
                        Background="#3BA600"
                        BorderBrush="#3BA600"
                        Click="btnNext_Click"
                        Content="View Order"
                        FontSize="18"
                        Foreground="White" />
                </Grid>
            </Border>

        </Grid>



    </md:DialogHost>


</Page>
