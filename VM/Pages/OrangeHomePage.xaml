<Page
    x:Class="VM.Pages.OrangeHomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    Title="OrangeHomePage"
    d:DesignHeight="1720"
    d:DesignWidth="1080"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{md:MaterialDesignFont}"
    FontSize="20"
    Loaded="Page_Loaded"
    TextElement.FontSize="20"
    TextElement.FontWeight="Medium"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    mc:Ignorable="d">

    <Page.Resources>
        <Storyboard x:Key="orderLeft" />

    </Page.Resources>

    <!--<md:DialogHost>
        <md:DialogHost.DialogContent>
            <StackPanel />
        </md:DialogHost.DialogContent>-->
    <ScrollViewer>
    <Grid>
        <Grid.RowDefinitions>
          
            <RowDefinition Height="*" />
            <RowDefinition Height="80" />
            <RowDefinition Height="150" />
            <RowDefinition Height="*" />
             <RowDefinition Height="80" />
            </Grid.RowDefinitions>

 

        <DockPanel Grid.Row="0">
            <MediaElement
                Name="meVideo"
                HorizontalAlignment="Stretch"
                MediaEnded="meVideo_MediaEnded"
                MediaFailed="meVideo_MediaFailed"
                Stretch="Fill"
                Volume="1" />
        </DockPanel>

        <Grid Grid.Row="1" Background="#FF9000">

            <WrapPanel
                Margin="20,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center">
                <md:PackIcon
                    Width="20"
                    Height="20"
                    Margin="0,5,0,0"
                    Kind="Phone" />
                <TextBlock Margin="5,0,0,0" Text="7894651320" />
            </WrapPanel>

            <TextBlock
                Name="lblCurrentTime"
                Margin="20,0"
                VerticalAlignment="Center"
                Text="{Binding Source={x:Static sys:DateTime.Now}, StringFormat='{}{0:dd-MM-yyyy hh:mm:ss tt}'}"
                TextAlignment="Left" />
        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="30" />
            </Grid.RowDefinitions>

            <Image
                Grid.Row="0"
                Grid.Column="0"
                Source="/Images/order.png"
                Stretch="Uniform" />
            <TextBlock
                Grid.Row="1"
                Grid.Column="0"
                Text="Tap to Order"
                TextAlignment="Center" />



            <Image
                Grid.Column="1"
                Width="70"
                Source="/Images/arrow.png"
                Stretch="Uniform" />

            <Image
                Grid.Column="2"
                Width="150"
                Source="/Images/upi2.png"
                Stretch="Uniform" />

            <TextBlock
                Grid.Row="1"
                Grid.Column="2"
                Text="Scan to Pay"
                TextAlignment="Center" />

            <Image
                Grid.Column="3"
                Width="70"
                Source="/Images/arrow.png"
                Stretch="Uniform" />

            <Image
                Grid.Column="4"
                Source="/Images/juicing.png"
                Stretch="Uniform" />
            <TextBlock
                Grid.Row="1"
                Grid.Column="4"
                Text="Juicing"
                TextAlignment="Center" />

            <Image
                Grid.Column="5"
                Width="70"
                Source="/Images/arrow.png"
                Stretch="Uniform" />

            <Image
                Grid.Column="6"
                Source="/Images/Glass.png"
                Stretch="Uniform" />
            <TextBlock
                Grid.Row="1"
                Grid.Column="6"
                Text="Enjoy your Juice"
                TextAlignment="Center" />

        </Grid>


        <Grid Grid.Row="3">
             
            <Grid.Background>
                <ImageBrush
                    ImageSource="/Images/bg.png"
                    Opacity="0.3"
                    Stretch="Uniform" />
                
            </Grid.Background>

                <md:DialogHost  x:Name="pgJuicePageHost">
                    <md:DialogHost.DialogContent >
                        <StackPanel>
                            <TextBlock
                    Name="lblErrMessage"
                    FontSize="28"
                    Text="Machine out of Order. Sorry for the inconvenience"
                    TextAlignment="Center"
                    Margin="20"
                    TextWrapping="Wrap"/>
                            <Button 
                Name="btnOk"
                Content="Ok"
                  FontSize="26"
                        HorizontalAlignment="Center"
                        Margin="10"
                      Width="200"
                        Height="60"
                        Click="OnDialogOkClick"/>
                        </StackPanel>
                    </md:DialogHost.DialogContent>
                </md:DialogHost>
                <Canvas Height="600">

                <StackPanel
                    Name="spOrder"
                    Canvas.Left="340"
                    Width="400"
                    Height="550">
                    <Image Source="/Images/Glass.png" Stretch="Uniform" />
                    
                    <TextBlock
                        Name="lblPrice"
                        Margin="0,20"
                        FontSize="30"
                        Text="â‚¹ 50"
                        TextAlignment="Center" />

                    <Button
                        Name="btnOrder"
                        Width="250"
                        Height="50"
                        Click="btnOrder_Click"
                        Content="ORDER"
                        FontSize="20"
                        Style="{StaticResource MaterialDesignRaisedButton}">
                        <Button.Triggers>
                            <EventTrigger RoutedEvent="Button.Click">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation
                                            Storyboard.TargetName="spOrder"
                                            Storyboard.TargetProperty="(Image.RenderTransform).(TranslateTransform.X)"
                                            From="340"
                                            To="40"
                                            Duration="0:0:3" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Button.Triggers>

                    </Button>
                </StackPanel>

                <StackPanel
                    Name="spUpi"
                    Canvas.Right="40"
                    Width="400"
                    Height="550"
                    Margin="40,0">
                    <TextBlock
                        Name="lblQrMessage"
                        Height="50"
                        Text="Scan QR code to make the payment"
                        TextAlignment="Center"
                        TextWrapping="Wrap" />

                    <Grid>
                        <md:Card
                            Name="processCard"
                            Width="300"
                            Height="300"
                            Margin="0,20"
                            Padding="4"
                            Panel.ZIndex="2"
                            Background="White"
                            UniformCornerRadius="14">
                            <ProgressBar
                                Name="pgProcess"
                                Width="200"
                                Height="200"
                                IsIndeterminate="True"
                                Style="{StaticResource MaterialDesignCircularProgressBar}"
                                Value="40" />
                        </md:Card>

                        <Image
                            Name="imgUPI"
                            Width="300"
                            Height="300"
                            Margin="0,20"
                            Panel.ZIndex="3"
                            Source="/Images/pleasewait.png"
                            Stretch="Uniform" />

                        <Image
                            Name="imgOrnageProcess"
                            Width="300"
                            Height="300"
                            Margin="0,20"
                            Panel.ZIndex="3"
                            Source="/Images/halforange.png"
                            Stretch="Uniform">
                            <Image.RenderTransform>
                                <RotateTransform CenterX="150" CenterY="150" />
                            </Image.RenderTransform>
                            <Image.Style>
                                <Style>
                                    <Style.Triggers>
                                        <Trigger Property="Image.Visibility" Value="Visible">
                                            <Trigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation
                                                            RepeatBehavior="Forever"
                                                            Storyboard.TargetProperty="RenderTransform.Angle"
                                                            From="0"
                                                            To="360"
                                                            Duration="0:0:1" />
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.EnterActions>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Image.Style>
                        </Image>
                    </Grid>

                    <StackPanel>
                        <TextBlock
                            Name="lblSecondsRemains"
                            FontSize="30"
                            Text="20 Seconds"
                            TextAlignment="Center" />
                        <TextBlock
                            Name="lblSecondsPart2"
                            Text="Remaining to complete the payment"
                            TextAlignment="Center" />
                    </StackPanel>
                    <Button
                        Name="btnCancel"
                        Width="250"
                        Height="50"
                        Margin="0,20,0,0"
                        Background="Red"
                        BorderBrush="Red"
                        Click="btnCancel_Click"
                        Content="CANCEL"
                        FontSize="20"
                        Style="{StaticResource MaterialDesignRaisedButton}" />
                </StackPanel>

            </Canvas>


        </Grid>
            <Border Grid.Row="4" TextElement.Foreground="{DynamicResource MaterialDesignBody}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="150" />
                    </Grid.ColumnDefinitions>
                    <Button
             Name="btnBack"
             Grid.Column="0"
             Width="130"
             Height="70"
             VerticalAlignment="Center"
             Background="#CA1F2F"
             BorderBrush="#CA1F2F"
             Click="btnBack_Click"
             Content="Back"
             FontSize="18"
             Foreground="White" />

              
                </Grid>
            </Border>

        </Grid>
    </ScrollViewer>

    <!--</md:DialogHost>-->
</Page>
