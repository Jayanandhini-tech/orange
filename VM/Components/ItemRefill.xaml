<UserControl
    x:Class="VM.Components.ItemRefill"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:VM.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    d:DesignHeight="220"
    d:DesignWidth="150"
    FontSize="12"
    mc:Ignorable="d">

    <Button
        Width="auto"
        Height="auto"
        Click="btn_Click">
        <Button.Template>
            <ControlTemplate>
                <md:Card md:ElevationAssist.Elevation="Dp24" md:UniformCornerRadius="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="150" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="30" />
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Background="White">
                            <Image Source="{Binding ImgPath}" Stretch="Uniform" />
                        </Border>


                        <TextBlock
                            Grid.Row="1"
                            Margin="5"
                            FontSize="11"
                            TextAlignment="Center"
                            TextWrapping="Wrap">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}{0} - ₹{1}">
                                    <Binding Path="ProductName" />
                                    <Binding Path="Price" />
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>

                        <Border Grid.Row="2">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SoldOut}" Value="True">
                                            <Setter Property="Background" Value="Red" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding SoldOut}" Value="False">
                                            <Setter Property="Background" Value="Transparent" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <TextBlock
                                Margin="5"
                                VerticalAlignment="Center"
                                FontSize="20"
                                FontWeight="Bold"
                                TextAlignment="Center">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{}{0}/{1}">
                                        <Binding Path="Stock" />
                                        <Binding Path="Capacity" />
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </Border>


                    </Grid>
                </md:Card>
            </ControlTemplate>
        </Button.Template>
    </Button>
</UserControl>
