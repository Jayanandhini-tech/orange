<Page
    x:Class="VM.Pages.PaymentOptionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:VM.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="PaymentOptionPage"
    d:DesignHeight="1200"
    d:DesignWidth="800"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{md:MaterialDesignFont}"
    FontSize="18"
    Loaded="Page_Loaded"
    TextElement.FontSize="14"
    TextElement.FontWeight="Medium"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    mc:Ignorable="d">


    <md:DialogHost Identifier="pgPaymentOptionsHost">
        <md:DialogHost.DialogContent>
            <StackPanel />
        </md:DialogHost.DialogContent>
        <Grid>
            <Grid.RowDefinitions>

                <RowDefinition Height="*" />
                <RowDefinition Height="100" />
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0">
                <md:Card
                    Margin="20"
                    md:ElevationAssist.Elevation="Dp5"
                    md:UniformCornerRadius="10">

                    <UniformGrid
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Columns="2">

                        <md:Card
                            Name="cdUPI"
                            Width="300"
                            Height="300"
                            Margin="20"
                            md:ElevationAssist.Elevation="Dp16"
                            md:UniformCornerRadius="10"
                            MouseDown="UPI_MouseDown">
                            <StackPanel>
                                <Border
                                    Width="200"
                                    Height="200"
                                    Margin="0,20"
                                    Padding="10"
                                    BorderBrush="LightGray"
                                    BorderThickness="2"
                                    CornerRadius="50">
                                    <Border.Background>
                                        <ImageBrush ImageSource="/Images/upi2icon.jpg" Stretch="Fill" />
                                    </Border.Background>

                                </Border>
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="18"
                                    Text="UPI - Scan &amp; Pay" />
                            </StackPanel>
                        </md:Card>

                        <md:Card
                            Name="cdCounter"
                            Width="300"
                            Height="300"
                            Margin="30"
                            md:ElevationAssist.Elevation="Dp16"
                            md:UniformCornerRadius="10"
                            MouseDown="Counter_MouseDown">
                            <StackPanel>
                                <Border
                                    Width="200"
                                    Height="200"
                                    Margin="0,20"
                                    Padding="10"
                                    BorderBrush="LightGray"
                                    BorderThickness="2"
                                    CornerRadius="50">
                                    <Border.Background>
                                        <ImageBrush ImageSource="/Images/counterpayment.jpg" Stretch="Fill" />
                                    </Border.Background>

                                </Border>
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="18"
                                    Text="PAY ON COUNTER" />
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="16"
                                    Text="CASH" />
                            </StackPanel>
                        </md:Card>



                        <md:Card
                            Name="cdCash"
                            Width="300"
                            Height="300"
                            Margin="30"
                            md:ElevationAssist.Elevation="Dp16"
                            md:UniformCornerRadius="10"
                            MouseDown="Cash_MouseDown">
                            <StackPanel>
                                <Border
                                    Width="200"
                                    Height="200"
                                    Margin="0,20"
                                    Padding="10"
                                    BorderBrush="LightGray"
                                    BorderThickness="2"
                                    CornerRadius="50">
                                    <Border.Background>
                                        <ImageBrush ImageSource="/Images/cash2.jpg" Stretch="Fill" />
                                    </Border.Background>

                                </Border>
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="18"
                                    Text="CASH" />
                            </StackPanel>
                        </md:Card>

                        <md:Card
                            Name="cdAccount"
                            Width="300"
                            Height="300"
                            Margin="20"
                            md:ElevationAssist.Elevation="Dp16"
                            md:UniformCornerRadius="10"
                            MouseDown="Account_MouseDown">
                            <StackPanel>
                                <Border
                                    Width="200"
                                    Height="200"
                                    Margin="0,20"
                                    Padding="10"
                                    BorderBrush="LightGray"
                                    BorderThickness="2"
                                    CornerRadius="50">
                                    <Border.Background>
                                        <ImageBrush ImageSource="/Images/idcard.jpg" Stretch="Fill" />
                                    </Border.Background>

                                </Border>
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="18"
                                    Text="ACCOUNT" />
                            </StackPanel>
                        </md:Card>

                        <md:Card
                            Name="cdCard"
                            Width="300"
                            Height="300"
                            Margin="20"
                            md:ElevationAssist.Elevation="Dp16"
                            md:UniformCornerRadius="10"
                            MouseDown="Card_MouseDown">
                            <StackPanel>
                                <Border
                                    Width="200"
                                    Height="200"
                                    Margin="0,20"
                                    Padding="10"
                                    BorderBrush="LightGray"
                                    BorderThickness="2"
                                    CornerRadius="50">
                                    <Border.Background>
                                        <ImageBrush ImageSource="/Images/card.jpg" Stretch="Fill" />
                                    </Border.Background>

                                </Border>
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="18"
                                    Text="CARD" />
                            </StackPanel>
                        </md:Card>


                    </UniformGrid>

                </md:Card>
            </DockPanel>

            <Border Grid.Row="2" CornerRadius="5,5,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="150" />
                    </Grid.ColumnDefinitions>
                    <Button
                        Name="btnBack"
                        Grid.Column="0"
                        Width="130"
                        Height="70"
                        VerticalAlignment="Center"
                        Background="#CA1F2F"
                        BorderBrush="#CA1F2F"
                        Click="btnBack_Click"
                        Content="Back"
                        FontSize="18"
                        Foreground="White" />


                    <TextBlock
                        x:Name="lblTotal"
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        VerticalAlignment="Center"
                        FontSize="25"
                        Text="Total : ₹0"
                        TextAlignment="Center" />

                </Grid>
            </Border>

        </Grid>



    </md:DialogHost>
</Page>
