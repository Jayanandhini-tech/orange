<Page
    x:Class="VM.Pages.IdCardRegisterPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:VM.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="IdCardRegisterPage"
    d:DesignHeight="1000"
    d:DesignWidth="1040"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{md:MaterialDesignFont}"
    FontSize="18"
    Loaded="Page_Loaded"
    TextElement.FontSize="14"
    TextElement.FontWeight="Medium"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    mc:Ignorable="d">


    <md:DialogHost Identifier="pgIdCardRegisterHost">
        <md:DialogHost.DialogContent>
            <StackPanel />
        </md:DialogHost.DialogContent>
        <Grid>
            <Grid.RowDefinitions>

                <RowDefinition Height="*" />
                <RowDefinition Height="100" />
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0">
                <md:Card
                    Margin="20"
                    md:ElevationAssist.Elevation="Dp5"
                    md:UniformCornerRadius="10">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>

                        <ScrollViewer
                            Name="svItems"
                            Grid.Row="0"
                            Margin="10"
                            Padding="5"
                            PanningMode="VerticalOnly"
                            VerticalScrollBarVisibility="Auto">
                            <StackPanel VerticalAlignment="Top">
                                <TextBlock
                                    Margin="0,20,0,40"
                                    FontSize="30"
                                    FontWeight="Bold"
                                    Text="Id Card Register"
                                    TextAlignment="Center" />

                                <TextBox
                                    Name="txtIdCardNo"
                                    Width="500"
                                    Margin="10"
                                    md:HintAssist.Hint="Id Card Number"
                                    FontSize="20"
                                    IsEnabled="False"
                                    Style="{StaticResource MaterialDesignOutlinedTextBox}" />

                                <TextBox
                                    Name="txtRollNo"
                                    Width="500"
                                    Margin="10"
                                    md:HintAssist.Hint="Roll Number"
                                    FontSize="20"
                                    MaxLength="15"
                                    PreviewMouseDown="TextBox_PreviewMouseDown"
                                    Style="{StaticResource MaterialDesignOutlinedTextBox}" />

                                <TextBox
                                    Name="txtName"
                                    Width="500"
                                    Margin="10"
                                    md:HintAssist.Hint="Name"
                                    FontSize="20"
                                    MaxLength="50"
                                    PreviewMouseDown="TextBox_PreviewMouseDown"
                                    Style="{StaticResource MaterialDesignOutlinedTextBox}" />



                                <Button
                                    Name="btnNext"
                                    Width="500"
                                    Height="50"
                                    Margin="0,50,0,30"
                                    md:ButtonAssist.CornerRadius="5"
                                    Background="#3BA600"
                                    BorderBrush="#3BA600"
                                    Click="btnNext_Click"
                                    Content="Register"
                                    FontSize="30"
                                    Foreground="White" />

                            </StackPanel>

                        </ScrollViewer>

                        <DockPanel Grid.Row="1">

                            <StackPanel
                                Margin="0,5"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                    <Button
                                        Click="btnNumber_Click"
                                        Style="{StaticResource btn-keyboard}"
                                        Tag="1" />
                                    <Button
                                        Click="btnNumber_Click"
                                        Style="{StaticResource btn-keyboard}"
                                        Tag="2" />
                                    <Button
                                        Click="btnNumber_Click"
                                        Style="{StaticResource btn-keyboard}"
                                        Tag="3" />
                                    <Button
                                        Click="btnNumber_Click"
                                        Style="{StaticResource btn-keyboard}"
                                        Tag="4" />
                                    <Button
                                        Click="btnNumber_Click"
                                        Style="{StaticResource btn-keyboard}"
                                        Tag="5" />
                                    <Button
                                        Click="btnNumber_Click"
                                        Style="{StaticResource btn-keyboard}"
                                        Tag="6" />
                                    <Button
                                        Click="btnNumber_Click"
                                        Style="{StaticResource btn-keyboard}"
                                        Tag="7" />
                                    <Button
                                        Click="btnNumber_Click"
                                        Style="{StaticResource btn-keyboard}"
                                        Tag="8" />
                                    <Button
                                        Click="btnNumber_Click"
                                        Style="{StaticResource btn-keyboard}"
                                        Tag="9" />
                                    <Button
                                        Click="btnNumber_Click"
                                        Style="{StaticResource btn-keyboard}"
                                        Tag="0" />
                                </StackPanel>


                                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                    <Button
                                        Click="btnNumber_Click"
                                        Style="{StaticResource btn-keyboard}"
                                        Tag="Q" />
                                    <Button
                                        Click="btnNumber_Click"
                                        Style="{StaticResource btn-keyboard}"
                                        Tag="W" />
                                    <Button
                                        Click="btnNumber_Click"
                                        Style="{StaticResource btn-keyboard}"
                                        Tag="E" />
                                    <Button
                                        Click="btnNumber_Click"
                                        Style="{StaticResource btn-keyboard}"
                                        Tag="R" />
                                    <Button
                                        Click="btnNumber_Click"
                                        Style="{StaticResource btn-keyboard}"
                                        Tag="T" />
                                    <Button
                                        Click="btnNumber_Click"
                                        Style="{StaticResource btn-keyboard}"
                                        Tag="Y" />
                                    <Button
                                        Click="btnNumber_Click"
                                        Style="{StaticResource btn-keyboard}"
                                        Tag="U" />
                                    <Button
                                        Click="btnNumber_Click"
                                        Style="{StaticResource btn-keyboard}"
                                        Tag="I" />
                                    <Button
                                        Click="btnNumber_Click"
                                        Style="{StaticResource btn-keyboard}"
                                        Tag="O" />
                                    <Button
                                        Click="btnNumber_Click"
                                        Style="{StaticResource btn-keyboard}"
                                        Tag="P" />
                                </StackPanel>


                                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                    <Button
                                        Click="btnNumber_Click"
                                        Style="{StaticResource btn-keyboard}"
                                        Tag="A" />
                                    <Button
                                        Click="btnNumber_Click"
                                        Style="{StaticResource btn-keyboard}"
                                        Tag="S" />
                                    <Button
                                        Click="btnNumber_Click"
                                        Style="{StaticResource btn-keyboard}"
                                        Tag="D" />
                                    <Button
                                        Click="btnNumber_Click"
                                        Style="{StaticResource btn-keyboard}"
                                        Tag="F" />
                                    <Button
                                        Click="btnNumber_Click"
                                        Style="{StaticResource btn-keyboard}"
                                        Tag="G" />
                                    <Button
                                        Click="btnNumber_Click"
                                        Style="{StaticResource btn-keyboard}"
                                        Tag="H" />
                                    <Button
                                        Click="btnNumber_Click"
                                        Style="{StaticResource btn-keyboard}"
                                        Tag="J" />
                                    <Button
                                        Click="btnNumber_Click"
                                        Style="{StaticResource btn-keyboard}"
                                        Tag="K" />
                                    <Button
                                        Click="btnNumber_Click"
                                        Style="{StaticResource btn-keyboard}"
                                        Tag="L" />
                                </StackPanel>

                                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                    <Button
                                        Width="100"
                                        Click="btnNumber_Click"
                                        FontSize="25"
                                        Style="{StaticResource btn-keyboard}"
                                        Tag=" ">
                                        SPACE
                                    </Button>
                                    <Button
                                        Click="btnNumber_Click"
                                        Style="{StaticResource btn-keyboard}"
                                        Tag="Z" />
                                    <Button
                                        Click="btnNumber_Click"
                                        Style="{StaticResource btn-keyboard}"
                                        Tag="X" />
                                    <Button
                                        Click="btnNumber_Click"
                                        Style="{StaticResource btn-keyboard}"
                                        Tag="C" />
                                    <Button
                                        Click="btnNumber_Click"
                                        Style="{StaticResource btn-keyboard}"
                                        Tag="V" />
                                    <Button
                                        Click="btnNumber_Click"
                                        Style="{StaticResource btn-keyboard}"
                                        Tag="B" />
                                    <Button
                                        Click="btnNumber_Click"
                                        Style="{StaticResource btn-keyboard}"
                                        Tag="N" />
                                    <Button
                                        Click="btnNumber_Click"
                                        Style="{StaticResource btn-keyboard}"
                                        Tag="M" />
                                    <Button
                                        Click="btnNumber_Click"
                                        Style="{StaticResource btn-keyboard}"
                                        Tag="." />
                                    <Button
                                        Width="100"
                                        Background="#CA1F2F"
                                        BorderBrush="#CA1F2F"
                                        Click="btnNumber_Click"
                                        FontSize="25"
                                        Style="{StaticResource btn-keyboard}"
                                        Tag="DEL">
                                        DELETE
                                    </Button>
                                </StackPanel>

                            </StackPanel>

                        </DockPanel>

                    </Grid>


                </md:Card>
            </DockPanel>

            <Border Grid.Row="2" CornerRadius="5,5,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="150" />
                    </Grid.ColumnDefinitions>
                    <Button
                        Name="btnBack"
                        Grid.Column="0"
                        Width="130"
                        Height="70"
                        VerticalAlignment="Center"
                        Click="btnBack_Click"
                        Content="Back"
                        FontSize="18"
                        Foreground="White" />


                </Grid>
            </Border>

        </Grid>



    </md:DialogHost>
</Page>
